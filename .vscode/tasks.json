{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run FastAPI Backend",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "uvicorn",
        "app.main:app",
        "--reload"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}

}
